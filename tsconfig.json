{
    "compilerOptions": {
        /* Target & Modules */
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        /* Class fields */
        "useDefineForClassFields": true,
        /* Module Resolution */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        /* Emit */
        "noEmit": true,
        /* Strictness & Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}